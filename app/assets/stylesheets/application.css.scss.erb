$titles-color: #FFFFFF;
$text-color: #1e1e1e;
$list-title-color: #107d15;
$primary: #4caf50;
$primary-dark: #39833c;
$player-color: #4caf50;
$background-color: #ecf1ed;
$font-size: 24px;
@import 'bootstrap';

@font-face {
   font-family: 'uthmani';
   src: url(font-path('UthmanicHafs1.otf'));
   font-display: swap;

}

@font-face {
  font-family: 'amiri-quran';
  src: url(font-path('amiri-quran.otf'));
  font-display: swap;

}
$titles-color: #FFFFFF;
$text-color: #1e1e1e;
$list-title-color: #107d15;
$primary: #4caf50;
$primary-dark: #39833c;
$player-color: #4caf50;
$background-color: #ecf1ed;
$font-size: 24px;
p, h5 {
  text-align: right;
}
.rtl {
  direction: rtl !important;
}
body{
  background: url(image-path("bg.webp"));
  background-color: #f0f0f0;
  font-family:  amiri-quran !important;
  direction: ltr !important;
}
.werd-desc{
  color: gray;
}
.line-container{
	background: white;
	color: #444;
	padding: 8px 24px;
	font-size: $font-size;
  border-radius: 16px;
  line-height: 30px;
  position: relative;
  &.green{
    background: #e1ffe1; // white
  }
  &.werd {
    p {
      line-height: $font-size*2;
      text-align: center;
    }
    p::first-line{
      text-align: center;
    }
  }
  .line-index{
    font-size: $font-size/2;
    position: absolute;
    top: 0px;
    left: 10px;
    &.werd-index{
      top: auto;
      bottom: 7px;
      left: 10px;
    }
  }
}
.footer-links{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.chapter-title, .poem-title{
	color: white;
	background: $primary;
	padding: 8px;
	margin-top: 16px;
	font-size: 18px;
}
.header {
  background-color: $primary;
}

.inline-block{
  display: inline-block;
}
.carousel-control-prev, .carousel-control-next {
  width: 10%;
}
.carousel-control-prev-icon {
  background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%234caf50' viewBox='0 0 8 8'%3E%3Cpath d='M5.25 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E") !important;
}

.carousel-control-next-icon {
  background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%234caf50' viewBox='0 0 8 8'%3E%3Cpath d='M2.75 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E") !important;
}

.chapter-title{
  cursor: pointer;
}
.anchor-btn{
  background-color: $primary;
  font-size: 24px;
  color: #fff;
}
.header-right img{
  height: 50px;
}

ul#sharing_list{
  list-style: none;
  margin-bottom: 0;
  padding: 0;
  li {
    display: inline-block;
    img{
      width: 40px;
    }
  }

}

.fs-18{
  font-size: 18px;
}
.logo {
  margin-right: 1rem;
}

.page-item{
  min-width: 50px;
  min-height: 50px;
}
#pagination-container{
  overflow: scroll;
}
@media (max-width: 720px) {
  .header-right img{
    height: 30px;
  }
}
.text-right{
  text-align: right;
}
.text-left{
  text-align: left;
}