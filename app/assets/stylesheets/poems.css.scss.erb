@font-face {
   font-family: 'uthmani';
   src: url(font-path('UthmanicHafs1.otf'));
}
p, h5 {
  text-align: right;
}
.rtl {
  direction: rtl !important;
}
body{
  background: url(image-path("bg.png")) transparent;
  background-color: #f0f0f0;
  font-family:  uthmani;
}
.line-container{
	background: white;
	color: #444;
	padding: 8px;
	font-size: $font-size;

}
.chapter-title, .poem-title{
	color: white;
	background: $primary;
	padding: 8px;
	margin-top: 16px;
	font-size: 18px;
}
.header {
  background-color: $primary;
}

.inline-block{
  display: inline-block;
}
.carousel-control-prev, .carousel-control-next {
  width: 10%;
}
.carousel-control-prev-icon {
  background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%234caf50' viewBox='0 0 8 8'%3E%3Cpath d='M5.25 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E") !important;
}

.carousel-control-next-icon {
  background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%234caf50' viewBox='0 0 8 8'%3E%3Cpath d='M2.75 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E") !important;
}

.chapter-title{
  cursor: pointer;
}
.anchor-btn{
  background-color: $primary;
  font-size: 24px;
  color: #fff;
}
.header-right img{
  height: 50px;
}

ul#sharing_list{
  list-style: none;
  margin-bottom: 0;
  padding: 0;
  li {
    display: inline-block;
    img{
      width: 40px;
    }
  }

}

.fs-18{
  font-size: 18px;
}
.logo {
  margin-right: 1rem;
}

@media (max-width: 720px) {
  .header a.logo img{
    width: 50px;
    height: 50px;
    margin-right: 10px;
  }
  .logo{
    margin-right: 0px;
  }
  .header-right img{
    height: 30px;
  }
}