@font-face {
   font-family: 'uthmani';
   src: url(font-path('UthmanicHafs1.otf'));
}
p, h5 {
  text-align: right;
}
.rtl {
  direction: rtl !important;
}
body{
  background: url(image-path("bg.png"));
  font-family:  uthmani;
}
.line-container{
	background: white;
	color: #444;
	padding: 8px;
	margin-top: 16px;
	font-size: $font-size;

}
.chapter-title, .poem-title{
	color: white;
	background: $primary;
	padding: 8px;
	margin-top: 16px;
	font-size: 18px;
}
.header {
  background-color: $primary;
}

.header img{
  height: 40px;
}
.header a.logo img{
  height: 68px;
  width: 100px;
  margin-top: -15px;
}
.carousel-control-next, .carousel-control-prev {
  top: 150px;
  height: 20px;
}
.carousel-control-prev-icon {
  background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%234caf50' viewBox='0 0 8 8'%3E%3Cpath d='M5.25 0l-4 4 4 4 1.5-1.5-2.5-2.5 2.5-2.5-1.5-1.5z'/%3E%3C/svg%3E") !important;
}

.carousel-control-next-icon {
  background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' fill='%234caf50' viewBox='0 0 8 8'%3E%3Cpath d='M2.75 0l-1.5 1.5 2.5 2.5-2.5 2.5 1.5 1.5 4-4-4-4z'/%3E%3C/svg%3E") !important;
}

.full-height {
  height: calc(100vh - 62px);
  overflow-y: auto;
}

.chapter-title{
  cursor: pointer;
}

ul#sharing_list{
  list-style: none;
  li img{
    width: 25px;
  }

}

@media (max-width: 720px) {
  .header a.logo img{
    width: 50px;
    height: 50px;
    margin-right: 10px;
  }
  .header-right img{
    height: 30px;
  }
}