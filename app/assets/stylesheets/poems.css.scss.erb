@font-face {
   font-family: 'uthmani';
   src: url(font-path('UthmanicHafs1.otf'));
}
p, h5 {
  text-align: right;
}
.rtl {
  direction: rtl !important;
}
body{
  background: url(image-path("bg.png"));
  font-family:  uthmani;
}
.line-container{
	background: white;
	color: #444;
	padding: 8px;
	margin-top: 16px;
	font-size: $font-size;

}
.chapter-title, .poem-title{
	color: white;
	background: $primary;
	padding: 8px;
	margin-top: 16px;
	font-size: 18px;
}
.header {
  background-color: $primary;
}

.header img{
  width: 100px;
}
.header a.logo img{
  width: 30px;
}
.header a.facebook img{
  width: 30px;
}
.carousel-control-next, .carousel-control-prev {
  top: 150px;
  height: 20px;
}



.full-height {
  height: calc(100vh - 100px);
  overflow-y: auto;
  background: red;
}