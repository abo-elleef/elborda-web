<div class="container">
  <div class="mt-3">
    <% werd = award_content.find {|werd| werd[:title] == params[:title]}[:textPages] %>
    <% werd.map.with_index do |line, index| %>
      <div class="col col-12 line-container green werd  text-center mb-3 text-center">
        <%= simple_format line %>
        <span class="line-index werd-index"><%= index + 1 %> / <%= werd.size %> </span>
      </div>
    <% end %>
  </div>

</div>
