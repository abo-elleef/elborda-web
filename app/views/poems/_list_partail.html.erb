<% @poems.map do |poem| %>
  <br>
  <% link = poem.main_link %>
  <div class="card">
    <% if link.present? %>
      <iframe width="auto" src="<%= link.link %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <% end %>
    <!--        <iframe width="100%" height="300" scrolling="no" frameborder="no" allow="autoplay" src="https://w.soundcloud.com/player/?url=https%3A//api.soundcloud.com/tracks/163293604&color=%23ff5500&auto_play=false&hide_related=false&show_comments=true&show_user=true&show_reposts=false&show_teaser=true&visual=true"></iframe>-->
    <div class="card-body">
      <h5 class="card-title" dir="rtl"><%= link_to poem_link_name(poem), poem_quick_view_poem_path(poem.id), remote: true %></h5>
      <p class="card-text"><%= poem.desc %></p>
    </div>
  </div>
<% end %>