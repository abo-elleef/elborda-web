<div class="container text-center">
  <p class="text-center mt-3 werd-desc"><%= object[:desc] %></p>
  <% if object.links.present? %>
    <div class="<%= "col-md-12"  %>">
      <div class="mt-3 mb-3">
        <iframe width="100%" height="300" scrolling="no" frameborder="no" src="<%= object.links.first.link %>"></iframe>
      </div>
    </div>
  <% end %>
  <div class="mt-3">
    <% object.lines.map.with_index do |line, index| %>
      <div class="col col-12 line-container green werd text-center mb-1 text-center">
        <%= simple_format line.body %>
      </div>
      <span class="line-index"><%= index + 1 %> / <%= object.lines.size %> </span>
    <% end %>
  </div>

</div>
